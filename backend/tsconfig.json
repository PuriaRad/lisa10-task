{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom"],
    "noImplicitAny": false
  },
  "include": ["typings.d.ts", "server/**/*.ts", "app/**/*.ts"],
  "exclude": ["node_modules"]
}
